<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/appbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/mental1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text2"
                style="@style/AppTheme.Base.CardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="RespiraciÃ³n"
                app:layout_constraintBottom_toBottomOf="@+id/welcome" />


        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:contentDescription="TODO"
            android:src="@drawable/logoapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.204" />


        <TextView
            android:id="@+id/text3"
            style="@style/AppTheme.Base.TextP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comienza con tu pausa ya:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.317" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:text="3 Min"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.997"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="209dp"
            android:layout_height="75dp"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp"
            android:backgroundTint="@color/morado_de_mental"
            android:text=""
            android:textSize="15sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/shuffle_black"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/text4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text3"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/linesession"
            android:layout_width="390dp"
            android:layout_height="408dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/morado_de_mental"

                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/play_video"
                app:iconGravity="textEnd" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/morado_de_mental"

                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/play_video"
                app:iconGravity="textEnd" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/morado_de_mental"

                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/play_video"
                app:iconGravity="textEnd" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:srcCompat="@drawable/access_alarm_black" />

        <TextView
            android:id="@+id/text4"
            style="@style/AppTheme.Base.TextP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O escoge tu ejercicio favorito:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialButton"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>