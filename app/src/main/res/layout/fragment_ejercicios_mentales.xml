<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EjerciciosMentalesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/mental1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintBottom_toTopOf="@+id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text2"
                style="@style/AppTheme.Base.CardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="RespiraciÃ³n"
                app:layout_constraintBottom_toBottomOf="@+id/welcome" />


        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:contentDescription="TODO"
            android:src="@drawable/logoapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.181" />


        <TextView
            android:id="@+id/text3"
            style="@style/AppTheme.Base.TextP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comienza con tu pausa ya:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.317" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:text="3 Min"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.997"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="209dp"
            android:layout_height="75dp"
            android:layout_marginStart="106dp"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp"
            android:backgroundTint="@color/morado_de_mental"
            android:text=""
            android:textSize="15sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/shuffle_black"
            app:iconGravity="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linesession"
            android:layout_width="390dp"
            android:layout_height="408dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/text4"
                style="@style/AppTheme.Base.TextP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O escoge tu ejercicio favorito:" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/morado_de_mental"

                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/play_video"
                app:iconGravity="textEnd" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/morado_de_mental"

                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/play_video"
                app:iconGravity="textEnd" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="290dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/morado_de_mental"

                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/play_video"
                app:iconGravity="textEnd" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:srcCompat="@drawable/access_alarm_black" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>